{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}\\app.js"
        }, 
        {
            "name": "Attach",
            "type": "node",
            "request": "attach",
            // TCP/IP address. Default is "localhost".
            "address": "127.0.0.1",
            // Port to attach to.
            "port": 3000
        }
    ]
}