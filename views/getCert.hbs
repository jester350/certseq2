


<div class = "row">
<div class = "col-md-1"></div>
<div class = "col-md-10">

<form action="/certs/record{{certid}}" method="post" name="updatecert" id="updatecert" encType="multipart/form-data">

    <input type="hidden" id="certid" name="certid" value="{{certid}}">
    <input type="hidden" id="certdevicejuncid" name="certdevicejuncid" value="{{certdevicejuncid}}">

    <div class="form-inline row">
            <div class="col-sm-2">
                <label for="project" class="col-form-label mb-2 mr-sm-2 float-left">Project</label>
            </div>
            <div class="col-sm-3">
                <input type="text" name="project" id="project" class="form-control mb-2 mr-sm-2" readonly value="{{{projectname}}}">
            </div>
            <div class="col-sm-1">
                <label for="changeref" class="col-sm-1 col-form-label mb-2 mr-sm-2">Contact</label>
            </div>
            <div class="col-sm-3">
                <input type="text" name="contact" id="contact" class="form-control mb-2 mr-sm-2" readonly value="{{{userEmail}}}">
            </div>
    </div>   
    
    <div class="form-group row">
        <div class="col-sm-2">
            <label for="name" class="col-form-label mb-2 mr-sm-2">Common Name</label>
        </div>
        <div class="col-sm-3">
            <input type="text" name="commonname" id="commonname" class="form-control mb-2 mr-sm-2" value="{{{commonName}}}">
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-2">
        <label for="changeref" class="col-form-label mb-2 mr-sm-2">Change Reference</label>
        </div>
        <div class="col-sm-3">
            <input type="text" name="changeref" id="changeref" class="form-control mb-2 mr-sm-2" value="{{{changeref}}}">
        </div>
    </div>   

    <div class="form-group row">
        <div class="col-sm-2">
            <label for="certtype" class="col-form-label mb-2 mr-sm-2">Cert Type</label>
        </div>
        <div class="col-sm-3">
            <select name = "certtype" id="certtype" selected = {{{listcerttypename}}}>
                {{#each certlist}}
                    <option class="form-control mb-2 mr-sm-2" value="{{listcerttypeid}}" option selected="" id="{{listcerttypename}}">{{listcerttypename}}</option>
                {{/each}}
            </select>
        </div>
    </div>

    <script type="text/javascript">
    document.getElementById("{{certtypename}}").selected = "Selected";
    </script>

    <div class="form-inline row">
        <div class="col-sm-2">
            <label for="date3" class="col-form-label mb-2 mr-sm-2 float-left">Issue Date</label>
        </div>
        <div class="col-sm-3">
            <input type="date" name="issue_date" id="date" class="form-control mb-2 mr-sm-2" value="{{{idate}}}">
        </div>
        <div class="col-sm-1">
            <label for="name" class="col-form-label mb-2 mr-sm-2">Expiry Date</label>
        </div>
        <div class="col-sm-3">
                <input type="date" name="expiry_date" id="expiry_date" class="form-control mb-2 mr-sm-2" value="{{{edate}}}">
        </div>
    </div>
        

        <div class="form-group row">
        <div class="col-sm-2">
            <label for="leadtime" class="col-form-label mb-2 mr-sm-2">Lead Time</label>
        </div>
        <div class="col-sm-1">
            <input type="text" name="leadtime" id="leadtime" class="form-control mb-1" size=2px value="{{{leadTime}}}">
        </div>
        </div>

        <div class="form-inline row">
            <div class="col-sm-2">
                <label for="certRevoked" class="col-sm-0 col-form-label mb-2 mr-sm-2 float-left">Revoked</label>
            </div>
            <div class="col-sm-1">
                <input type="checkbox" name = "certRevoked" id="certRevoked" value="checked" onClick = "JavaScript:toggleVisibility(this,'certRevokedDate');" {{{certRevoked}}}>
            </div>
                <input type="date" name="certRevokedDate" id="certRevokedDate" class="form-control mb-1" value="{{{certRevokedDate}}}"><br>
        </div>
        <div class="form-inline row">
            <div class="col-sm-2">
                <label for="name" class="col-form-label mb-2 mr-sm-2 float-left">Cert file:</label>
            </div>
            <div class="col-sm-3">
                <input type="text" name="currentCertFile" id="currentCertFile" class="" value="{{{certfile}}}" />
            </div>    
                <input type="file" name="newcertfile" id="newcertfile" class="">
        </div>

        <div class="form-inline row">
            <div class="col-sm-2">
            <label for="implemented" class="col-sm-0 col-form-label mb-2 mr-sm-2 float-left">Implemented</label>
            </div>
            <div class="form-inline col-sm-1">
                <input type="checkbox" name = "implemented" id="implemented" value="checked" {{{implemented}}}>
            </div>
        </div>

<div class="container jf-form">
<form data-licenseKey="" name="jqueryform-4d4fe5" id="jqueryform-4d4fe5" action='postcert' method='post' enctype='multipart/form-data' novalidate autocomplete="on">
<input type="hidden" name="method" value="validateForm">
<input type="hidden" id="serverValidationFields" name="serverValidationFields" value="">
<div class="form-group f2 required" data-fid="f2"></div>

        <table class ="table table-bordered table-striped">
            <thead class ="thead-dark">
                <tr>
                <th>Device</th>
                <th>Delete</th>
                </tr>
            </thead>
            <tbody id="devices" class="collection with-header">
            {{#each certdevices}}
                <tr class="{{classtype}}">
                    <td>{{deviceName}}</td>
                    <td><input type="checkbox" id="removecert_cert" name="deldevice" value="{{{deviceid}}}"></td>
                </tr>
            {{/each}}
            </tbody>
        </table>





<div class="form-group certdevice " data-fid="certdevice">
  <label class="control-label" for="certdevice">Add Device</label>
<select class="form-control" id="certdevice" name="certdevice" multiple="multiple">
      {{#each devices}}
        <option value="{{deviceid}}">{{devicename}}</option>
      {{/each}}
</select>
</div>
</div>
<br><input type="submit" value='Update'>
<button type="submit" method="post" formaction="/certs/signrequest">Submit Request</button>
</form>
</div>

<!-- ----------------------------------------------- -->

        <style type="text/css">
            #certRevokedDate{visibility:{{revokedVis}};}
        </style>
        <script language="JavaScript">

            function toggleVisibility(eventsender, certRevokedDate){
                var myNewState = "hidden";
                if (eventsender.checked === true){
                    myNewState = "visible";
                }

                document.getElementById(certRevokedDate).style.visibility = myNewState;
            }       
        </script>

